{
    "name": "alura/buscador-cursos",
    "description": "Projeto que faz a busca de cursos no site da Alura",
    "type": "library",
    "version": "1.0.0",
    "require": {
        "guzzlehttp/guzzle": "^7.9",
        "symfony/dom-crawler": "^7.3",
        "symfony/css-selector": "^7.3"
    },
    "authors": [
        {
            "name": "Arthur Rodrigues"
        }
    ],
    "autoload": {
        "psr-4": {"Alura\\BuscadorDeCursos\\": "src/"}
    },
    "require-dev": {
        "phpunit/phpunit": "^12.2",
        "squizlabs/php_codesniffer": "^3.13",
        "phan/phan": "^5.5"
    },
    "scripts": {
        "test": "phpunit tests\\TestBuscadorDeCursos.php",
        "cs": "phpcs --standard=PSR12 src/",
        "phan": "phan --allow-polyfill-parser",
        "check": [
            "@phan",
            "@cs",
            "@test"
        ],
        "post-update-cmd": [
            "@test"
        ]
    },
    "scripts-descriptions": {
        "check": "Roda as dependÃªncias PHAN, PHPCS e PHPUNIT"
    }
}
